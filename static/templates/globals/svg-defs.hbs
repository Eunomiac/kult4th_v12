<svg id="svg-definitions" width="0" height="0" style="display: block; position: absolute; height: 0px; width: 0px;">
	<defs>
		{{!-- ### LINEAR GRADIENT DEFINITIONS ### --}}
		{{#each linearGradients}}
		<linearGradient id="{{id}}" x1="{{x.[0]}}" x2="{{x.[1]}}" y1="{{y.[0]}}" y2="{{y.[1]}}">
			{{#each stops}}
			<stop offset="{{offset}}%" stop-color="{{color}}" stop-opacity="{{opacity}}"></stop>
			{{/each}}
		</linearGradient>
		{{/each}}
    <filter id="inset-shadow">
      <feComponentTransfer in="SourceAlpha">
        <feFuncA type="table" tableValues="1 0" />
      </feComponentTransfer>
      <feGaussianBlur stdDeviation="3" />
      <feOffset dx="0" dy="0" result="offsetblur" />
      <feFlood flood-color="black" result="color" />
      <feComposite in2="offsetblur" operator="in" />
      <feComposite in2="SourceAlpha" operator="in" />
      <feMerge>
        <feMergeNode in="SourceGraphic" />
        <feMergeNode />
      </feMerge>
    </filter>
<mask id="fade-mask-top-bottom" maskUnits="objectBoundingBox" maskContentUnits="objectBoundingBox">
      <linearGradient id="fade-gradient-top" x1="0" y1="0" x2="0" y2="1">
        <stop offset="0%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="10%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="20%" style="stop-color: white; stop-opacity: 1" />
      </linearGradient>
      <linearGradient id="fade-gradient-bottom" x1="0" y1="1" x2="0" y2="0">
        <stop offset="0%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="10%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="20%" style="stop-color: white; stop-opacity: 1" />
      </linearGradient>
      <rect x="0" y="0" width="1" height="0.5" fill="url(#fade-gradient-top)" />
      <rect x="0" y="0.5" width="1" height="0.5" fill="url(#fade-gradient-bottom)" />
    </mask>

    <!-- Mask for Left and Right Edges -->
    <mask id="fade-mask-left-right" maskUnits="objectBoundingBox" maskContentUnits="objectBoundingBox">
      <linearGradient id="fade-gradient-left" x1="0" y1="0" x2="1" y2="0">
        <stop offset="0%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="10%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="20%" style="stop-color: white; stop-opacity: 1" />
      </linearGradient>
      <linearGradient id="fade-gradient-right" x1="1" y1="0" x2="0" y2="0">
        <stop offset="0%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="10%" style="stop-color: black; stop-opacity: 1" />
        <stop offset="20%" style="stop-color: white; stop-opacity: 1" />
      </linearGradient>
      <rect x="0" y="0" width="0.5" height="1" fill="url(#fade-gradient-left)" />
      <rect x="0.5" y="0" width="0.5" height="1" fill="url(#fade-gradient-right)" />
    </mask>
	</defs>
</svg>
